{
	"name": "sms_bot",
	"version": "0.1.0",
	"description": "A bot to manage the VUW SMS Discord server",
	"main": "dist/index.js",
	"repository": "https://github.com/Darkflame72/SMS-Discord-Bot",
	"author": "Leon Bowie <leon@bowie-co.nz>",
	"license": "AGPLv3-or-later",
	"private": true,
	"packageManager": "yarn@3.2.0",
	"type": "module",
	"imports": {
		"#lib/*": "./dist/lib/*.js",
		"#utils/*": "./dist/lib/util/*.js",
		"#env/*": "./dist/lib/env/*.js",
		"#types/*": "./dist/lib/types/*.js",
		"#constants/*": "./dist/lib/constants/*.js"
	},
	"scripts": {
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src",
		"typecheck": "tsc -b src",
		"start": "node --preserve-symlinks --enable-source-maps dist/index.js",
		"build": "tsup",
		"watch": "tsup --watch",
		"dev": "tsup --watch --onSuccess \"yarn start\"",
		"clean": "node scripts/clean.mjs",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@discordjs/builders": "0.13.0-dev.1649808566-01a423d",
		"@sapphire/fetch": "2.4.1",
		"@sapphire/utilities": "3.7.0",
		"@skyra/env-utilities": "0.0.5",
		"@skyra/http-framework": "0.6.2",
		"discord-api-types": "0.31.2",
		"esno": "0.16.3",
		"execa": "6.1.0",
		"ohmyfetch": "0.4.18",
		"tslib": "2.4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "16.3.0",
		"@commitlint/config-conventional": "16.2.4",
		"@sapphire/eslint-config": "4.3.7",
		"@sapphire/prettier-config": "1.4.3",
		"@sapphire/ts-config": "3.3.4",
		"@swc/core": "1.2.215",
		"@types/eslint": "8.4.5",
		"@types/node": "17.0.45",
		"@types/node-fetch": "2.6.2",
		"@types/prettier": "2.6.3",
		"@typescript-eslint/eslint-plugin": "5.30.7",
		"@typescript-eslint/parser": "5.30.7",
		"eslint": "8.20.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.2.1",
		"husky": "7.0.4",
		"lint-staged": "12.5.0",
		"prettier": "2.7.1",
		"pretty-quick": "3.1.3",
		"tsup": "5.12.9",
		"typescript": "4.7.4"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.6"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire"
	}
}
